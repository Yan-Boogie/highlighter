{
  "name": "highlighter",
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "main": "index.js",
  "author": "Ian Lai <ian24257587@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:rollup": "rollup --config ./rollup.config.js",
    "build:rollup:watch": "yarn build:rollup --watch",
    "commit": "git-cz",
    "lint:ts": "eslint . --config .eslintrc --ext .js,.ts",
    "test": "lerna run test --stream --sort",
    "test:coverage": "lerna run test:coverage --stream --sort",
    "react:test": "yarn workspace highlighter-react test",
    "react:test:coverage": "yarn react:test --coverage",
    "serve": "cd ./site && next -p 3001",
    "start": "yarn serve"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "emotion": "^10.0.9",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "4",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.4",
    "next": "^10.2.3",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-error-boundary": "^1.2.5",
    "rollup": "^2.26.6",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^26.5.1",
    "typescript": "^4.2.3"
  }
}
